<odoo>
    <record id="amazon_financial_plan_view_dashboard" model="ir.ui.view">
        <field name="name">Financial Plan Dashboard</field>
        <field name="model">amazon.financial.plan</field>

        <field name="arch" type="xml">
            <dashboard>
                <view ref="florence_amazon_financial_plan.amazon_financial_plan_view_pivot"
                      type="pivot"/>

                <group>
                    <aggregate name="total_used" string="Tot. Used"
                               group_operator="sum" field="total_used"
                               widget="monetary"/>
                    <aggregate name="total_to_use" string="Tot. To Use"
                               group_operator="sum" field="total_to_use"
                               widget="monetary"/>
                </group>
            </dashboard>
        </field>
    </record>
</odoo>