<odoo>
    <record id="fp_costs_update_view_form" model="ir.ui.view">
        <field name="name">FP - Costs Update</field>
        <field name="model">florence.fp.costs.update</field>

        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            Update values
                        </h1>
                    </div>

                    <group>
                        <p>
                            This wizard will create a duplicate of all FPs created in the previous month.
                            <br/>
                            <strong>Please refresh the page after the update and check the values!</strong>
                        </p>
                    </group>

                    <footer>
                        <button name="update_action" string="Update" type="object"/>
                        <button name="cancel_action" string="Cancel" type="object" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>