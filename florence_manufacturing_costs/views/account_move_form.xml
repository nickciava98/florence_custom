<odoo>
    <record id="account_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>

        <field name="arch" type="xml">
            <xpath expr="//div[@name='journal_div']" position="after">
                <label for="is_manufacturing_bill" string="Manufacturing Bill"
                       invisible="True"/>
                <div name="is_manufacturing_bill_div" class="d-flex"
                     invisible="True">
                    <field name="is_manufacturing_bill"/>
                </div>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_total']"
                   position="attributes">
                <attribute name="groups"/>
                <attribute name="optional">hide</attribute>
            </xpath>
        </field>
    </record>
</odoo>