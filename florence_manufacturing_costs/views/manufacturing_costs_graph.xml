<odoo>
    <record id="manufacturing_costs_view_graph" model="ir.ui.view">
        <field name="name">Costs Graph</field>
        <field name="model">manufacturing.costs</field>

        <field name="arch" type="xml">
            <graph string="Costs Analysis">
                <field name="name" string="Product"/>
                <field name="price_total_avg" string="Manufacturing Cost"
                       type="measure"/>
                <field name="price_packaging_avg" string="Packaging Cost"
                       type="measure"/>
                <field name="price_invoiced_avg" string="Price Invoiced"
                       type="measure"/>
                <field name="other_costs_avg" string="Other Costs"
                       type="measure"/>
            </graph>
        </field>
    </record>
</odoo>