<odoo>
    <record id="manufacturing_costs_view_form" model="ir.ui.view">
        <field name="name">Manufacturing Costs Form</field>
        <field name="model">manufacturing.costs</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Product" help="Select the product to track"/>
                        </h1>
                    </div>

                    <field name="currency_id" invisible="True"/>
                    <field name="start_date" invisible="True"/>
                    <field name="is_bom_present" invisible="True"/>
                    <field name="product_updated_cost" invisible="True"/>
                    <field name="product_last_manufacturer" invisible="True"/>
                    <field name="product_updated_qty" invisible="True"/>

                    <notebook>
                        <page string="Costs Tracking" name="costs_tracking">
                            <field name="costs_lines" widget="section_and_note_one2many"
                                   attrs="{'readonly': [('is_bom_present','=',False)]}"
                                   context="{'default_product': name, 'default_currency_id': currency_id,
                                             'default_date': start_date,
                                             'default_price_unit': product_updated_cost,
                                             'default_manufacturer': product_last_manufacturer,
                                             'default_pcs': product_updated_qty}">
                                <tree string="Costs" editable="bottom" delete="false">
                                    <field name="manufacturing_costs_line_id" invisible="True"/>
                                    <field name="product" invisible="True"/>
                                    <field name="currency_id" invisible="True"/>
                                    <field name="date"/>
                                    <field name="manufacturer"/>
                                    <field name="pcs" widget="integer"/>
                                    <field name="price_agreed" widget="monetary"
                                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    <field name="price_unit" widget="monetary"
                                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    <field name="price_finished" widget="monetary"
                                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                </tree>
                            </field>

                            <group class="oe_subtotal_footer oe_right" colspan="2" name="total_costs">
                                <field name="total_costs" widget="monetary"
                                       options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                            </group>

                            <div class="oe_clear"/>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>