        <field name="name">Product SKU Configuration</field>
        <field name="res_model">product.sku</field>
        <field name="view_mode">tree,form</field>

        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data yet!
            </p>

            <p>
                Start create SKUs for products!
            </p>
        </field>
    </record>

    <menuitem id="sku_config" parent="stock.menu_product_in_config_stock"
              name="SKU" sequence="1" action="sku_config_action"/>
</odoo>