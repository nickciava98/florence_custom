<odoo>
    <record id="product_sku_view_form" model="ir.ui.view">
        <field name="name">Product SKU</field>
        <field name="model">product.sku</field>

        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" help="Product SKU"
                                   placeholder="Insert the name of the Product SKU"/>
                        </h1>
                    </div>

                    <group>
                        <field name="product_id"/>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>