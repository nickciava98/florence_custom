<odoo>
    <record id="amazon_statistics_action" model="ir.actions.act_window">
        <field name="name">Reviews Statistics</field>
        <field name="res_model">amazon.statistics</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'group_by': 'name'}</field>

        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data yet!
            </p>

            <p>
                Start tracking Amazon Statistics!
            </p>
        </field>
    </record>

    <menuitem id="amazon_statistics_menu" name="Reviews Statistics"
              action="amazon_statistics_action" sequence="0"
              parent="florence_amazon_revenues.amazon_revenues_reporting_menu"/>
</odoo>