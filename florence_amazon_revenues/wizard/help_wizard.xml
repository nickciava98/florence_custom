<odoo>
    <record id="help_wizard_view_form" model="ir.ui.view">
        <field name="name">Help Guide</field>
        <field name="model">help.wizard.amz.rev</field>

        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="state" readonly="True"/>
                    </h1>

                    <div>
                        <div align="center" style="float:left; width:15%;">
                            <img src="florence_amazon_revenues/static/img/nickciava98.png"
                                 alt="Niccolò Ciavarella" style="width:50%"/>
                            <figcaption style="font-size:10px">
                                <b>Niccolò Ciavarella</b>
                                <br/>
                                IT Consultant
                            </figcaption>
                        </div>

                        <div style="float:right; width:85%;">
                            <field name="guide"/>
                        </div>
                    </div>
                </sheet>

                <footer>
                    <div>
                        <div style="float:left; width:20%;">
                            <button name="action_previous"
                                    string="Previous"
                                    type="object"
                                    attrs="{'invisible':[('state','=','0')]}"/>
                            <button name="action_next"
                                    string="Next"
                                    type="object"
                                    attrs="{'invisible':[('state','=','4')]}"/>
                            <button string="Close"
                                    special="cancel"
                                    attrs="{'invisible':[('state','!=','4')]}"/>
                        </div>

                        <div style="float:right; width:80%;">
                            <field name="info_and_contacts"
                                   readonly="True" widget="html"/>
                        </div>
                    </div>
                </footer>
            </form>
        </field>
    </record>
</odoo>