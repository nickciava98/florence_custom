<odoo>
    <record id="help_wizard_view_form" model="ir.ui.view">
        <field name="name">Help Guide</field>
        <field name="model">help.wizard</field>

        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1 attrs="{'invisible':[('state','=','0')]}">
                        <field name="state" readonly="True"/>
                    </h1>

                    <field name="guide"/>
                </sheet>

                <footer>
                    <button name="action_previous"
                            string="Previous"
                            type="object"
                            attrs="{'invisible':[('state','=','0')]}"/>
                    <button name="action_next"
                            string="Next"
                            type="object"
                            attrs="{'invisible':[('state','=','3')]}"/>
                    <button string="Close"
                            special="cancel"
                            attrs="{'invisible':[('state','!=','3')]}"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>