<odoo>
    <record id="amazon_revenues_line_view_graph" model="ir.ui.view">
        <field name="name">Revenues Graph</field>
        <field name="model">amazon.revenues.line</field>

        <field name="arch" type="xml">
            <graph string="Income Analysis">
                <field name="date"/>
                <field name="price_unit" string="Selling Price" type="measure"/>
                <field name="amazon_fees" type="measure"/>
                <field name="taxes" string="VAT" type="measure"/>
                <field name="sku_cost" type="measure"/>
                <field name="gross_revenues" type="measure"/>
                <field name="ads_total_cost" type="measure"/>
                <field name="ads_cost_per_unit" type="measure"/>
                <field name="pcs_sold" type="measure"/>
                <field name="earned_per_pc" type="measure"/>
                <field name="probable_income" type="measure"/>
<!--                <field name="probable_income_amz" type="measure"/>-->
            </graph>
        </field>
    </record>
</odoo>