<odoo>
    <record id="amazon_revenues_view_pivot" model="ir.ui.view">
        <field name="name">Amazon Pivot</field>
        <field name="model">amazon.revenues</field>
        <field name="arch" type="xml">
            <pivot string="Probable Income">
                <field name="product" type="row"/>
                <field name="total_probable_income" type="measure"/>
                <field name="name" type="col"/>
            </pivot>
        </field>
    </record>
</odoo>