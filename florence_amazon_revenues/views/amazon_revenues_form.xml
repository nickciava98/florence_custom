<odoo>
    <record id="amazon_revenues_view_form" model="ir.ui.view">
        <field name="name">Amazon Revenues Form</field>
        <field name="model">amazon.revenues</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="tree_view_action" string="Revenues List"
                                class="oe_stat_button" icon="fa-list-ul"/>
                        <button type="object" name="graph_view_action" string="Revenues Analysis"
                                class="oe_stat_button" icon="fa-bar-chart-o"/>
                    </div>

                    <label for="name" string="Marketplace"/>
                    <field name="name" help="Select the Amazon Marketplace"/>

                    <div class="oe_title">
                        <h1>
                            <field name="product" help="Select the product to track"/>
                        </h1>
                    </div>

                    <field name="marketplace" invisible="True"/>
                    <field name="product_updated_price" invisible="True"/>
                    <field name="currency_id" invisible="True"/>
                    <field name="start_date" invisible="True"/>

                    <notebook>
                        <page string="Incidence" name="incidence">
                            <field name="revenues_line" widget="section_and_note_one2many" string="Incidence"
                                   context="{'default_parent': name,
                                             'default_product': product,
                                             'default_date': start_date,
                                             'default_price_unit': product_updated_price,
                                             'default_currency_id': currency_id}">
                                <tree string="Revenues" editable="bottom">
                                    <field name="amazon_revenues_line_id" invisible="True"/>
                                    <field name="parent" invisible="True"/>
                                    <field name="product" invisible="True"/>
                                    <field name="currency_id" invisible="True"/>
                                    <field name="date"/>
                                    <field name="price_unit" widget="monetary" string="Selling Price" avg="Selling Price"
                                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    <field name="amazon_fees" widget="monetary" sum="Amazon Fees"
                                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    <field name="taxes" widget="monetary" string="VAT" sum="VAT"
                                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    <field name="sku_cost" widget="monetary" attrs="{'readonly': [('sku_cost','>','0')]}"
                                           options="{'currency_field': 'currency_id', 'field_digits': True}"
                                           sum="Sku Costs"/>
                                    <field name="gross_revenues" widget="monetary" sum="Gross Revenues"
                                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    <field name="ads_total_cost" widget="monetary" sum="Ads Total Cost"
                                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    <field name="ads_cost_per_unit" widget="monetary" avg="Ads Cost Per Unit"
                                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    <field name="pcs_sold" widget="integer" sum="Pcs Sold"/>
                                    <field name="earned_per_pc" avg="Earned Per Pc"/>
                                    <field name="probable_income" widget="monetary" sum="Probable Income"
                                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Test Area" name="test_area">
                            <field name="revenues_line_test" widget="section_and_note_one2many" string="Incidence"
                                   context="{'default_parent': name,
                                             'default_product': product,
                                             'default_date': start_date,
                                             'default_price_unit': product_updated_price,
                                             'default_currency_id': currency_id}">
                                <tree string="Revenues" editable="bottom">
                                    <field name="amazon_revenues_line_id" invisible="True"/>
                                    <field name="parent" invisible="True"/>
                                    <field name="product" invisible="True"/>
                                    <field name="currency_id" invisible="True"/>
                                    <field name="date"/>
                                    <field name="price_unit" widget="monetary" string="Selling Price" avg="Selling Price"
                                           options="{'currency_field': 'currency_id', 'field_digits': True}" readonly="False"/>
                                    <field name="amazon_fees" widget="monetary" sum="Amazon Fees" readonly="False"
                                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    <field name="taxes" widget="monetary" string="VAT" sum="VAT" readonly="False"
                                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    <field name="sku_cost" widget="monetary"
                                           options="{'currency_field': 'currency_id', 'field_digits': True}"
                                           sum="Sku Costs" readonly="False"/>
                                    <field name="gross_revenues" widget="monetary" sum="Gross Revenues" readonly="False"
                                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    <field name="ads_total_cost" widget="monetary" sum="Ads Total Cost" readonly="False"
                                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    <field name="ads_cost_per_unit" widget="monetary" avg="Ads Cost Per Unit" readonly="False"
                                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    <field name="pcs_sold" widget="integer" sum="Pcs Sold" readonly="False"/>
                                    <field name="earned_per_pc" avg="Earned Per Pc" readonly="False"/>
                                    <field name="probable_income" widget="monetary" sum="Probable Income" readonly="False"
                                           options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>